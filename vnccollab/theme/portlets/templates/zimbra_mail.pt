<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portletZimbraMail"
    i18n:domain="vnccollab.theme"
    tal:condition="view/enabled">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a href=""
           target="_blank"
           tal:attributes="href string:${view/data/protocol}${view/data/url}"
           tal:content="view/title"
           class="tile">
            Tags
        </a>
        <span class="portletTopRight"></span>
    </dt>
    <tal:rss tal:condition="view/feedAvailable"
                tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime"
                tal:repeat="item view/items">
        <dd class="portletItem oddrow"
            tal:define="oddrow repeat/item/odd"
            tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

            <a href="#"
               target="_blank"
               tal:attributes="href item/url"
               tal:omit-tag="not:item/url">
                <span tal:replace="item/title">
                    Email Subject
                </span>
                <span class="portletItemDetails"
                      tal:condition="item/updated" tal:content="python:toLocalizedTime(item['updated'])">19.02.2007</span>
                <span class="portletItemBody"
                      tal:condition="item/body"
                      tal:content="item/body">Email body</span>
            </a>
        </dd>
    </tal:rss>
    <dd class="portletFooter" tal:condition="view/feedAvailable">
        <a href=""
           target="_blank"
           tal:attributes="href string:${view/data/protocol}${view/data/url}"
           i18n:translate="box_morelink">
                More&hellip;
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</html>
