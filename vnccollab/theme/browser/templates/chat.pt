<!-- Temporary style fixes -->
<style type="text/css">
    div.chatroom {
        display: block;
        float: left;
        height: 311px;
        margin-right: 15px;
        width: 100%;
        z-index: 3;
    }
    .chatroom .chat-area {
        float: left;
        width: 100%;
    }
    .chat-textarea {
        border: 0 none;
        height: 48px;
        overflow: hidden;
        padding: 3px;
        width: 100%;
    }
    span.messageTimeStamp {
      float:right;
    }
    div.chatbox {
       margin-right:0px;
    }
    div.vncChatbox {
        height: 293px;
        overflow: hidden;
        position: relative;
        width: 70%;
        position:absolute;
   }
   #chat-tabs li{
        float:left;
        height:33px;
   }
   #chat-block{
       float:right;
       width:70%;
   }
   #online-users-container{
       display:block;
       float: left;
       width: 30%;
       height:327px;
   }
   #chat-tabs {
       background-color: #F5F5F5;
       border-bottom: 1px solid #C1CCD5;
       font-size: 0.75em;
       height: 33px;
       line-height: 1.25em;
   }
   .chat-content {
       height:180px;
   }
   .vncChatbox .chat-content {
       height:196px;
   }
   .close-chattab-button {
       color: #666666 !important;
       margin-right: 0.5em;
       padding: 0 4px;
   }
   #chatpanel {
     position:relative;
   }
   #history-box {
     background-color: #FFFFFF;
   }
   #history-box > span {
     float:left;
   }
   .roomParticipants {
     background-color: #FFFFFF;
   }
   .roomParticipants > span {
     float:left;
   }
   #chat-tabs li.selected {
         background-color: #FFFFFF;
         border-bottom: 1px solid #FFFFFF;
         border-left: 1px solid #C1CCD5;
         border-right: 1px solid #C1CCD5;
   }
   #chat-tabs a {
         color: #012A43;
         display: block;
         padding: 9px 15px;
         float:left;
   }
   #chat-tabs a.close-chattab-button {
         padding: 0px;
   }
   .panes div#users, .panes div#chatrooms, .panes div#settings {
         background-color: white;
         border: 1px solid #999999;
         border-bottom-left-radius: 0.5em;
         border-bottom-right-radius: 0.5em;
         font-size: 14px;
         width: 100%;
       }
   .oc-chat-content {
        height: 293px !important;
   }
   .oc-chat-head {
        background-color: #FFFFFF;
        width: 100%;
   }
   ul.tabs li {
        width: 50%;
   }
   ul.tabs {
        width: 100%;
   }
</style>
<div id="vnc-chat">
  <div id="chatpanel"
    tal:define="portal_url context/portal_url">

    <div id="collective-xmpp-chat-data" 
         tal:define="
                portal context/@@plone_portal_state/portal;
                member context/@@plone_portal_state/member;
                username member/getId;
                base_url python:context.portal_url();"
         tal:attributes="
                username username;
                base_url base_url;
                ">
      <div id="online-users-container" class="chatbox">
        <div class="chat-head oc-chat-head"> 
            <ul class="tabs">
                <li><a class="s" href="#users">Contacts</a></li>
                <li><a class="s" href="#chatrooms">Rooms</a></li>
            </ul>
        </div>
        <div class="panes">
          <div id="users" class="oc-chat-content">
            <form class="set-xmpp-status" action="" method="post">
              <span id="xmpp-status-holder">
                <select id="select-xmpp-status">
                  <option value="online">Online</option>
                  <option value="busy">Busy</option>
                  <option value="away">Away</option>
                  <option value="offline">Offline</option>
                </select>
              </span>
            </form>
            <div class="add-xmpp-contact">
              <a class="add-xmpp-contact" href="#" title="Click to search for new users to add as chat contacts">Add a contact</a>
              <form class="search-xmpp-contact" style="display:none">
                <input type="text" name="identifier" class="username" placeholder="Contact name"/>
                <button type="submit">Search</button>
                <ul id="found-users"></ul>
              </form>
            </div>
            <dl id="xmppchat-roster"></dl>
          </div> 
          <div id="chatrooms">
            <form class="add-chatroom" action="" method="post">
              <input type="text" name="chatroom" class="new-chatroom-name" placeholder="Chat room name"/>
              <button type="submit">Join</button>
            </form>
            <dl id="available-chatrooms">
              <dt>Available chatrooms</dt>
            </dl>
          </div>
        </div>
      </div>
      <div id="chat-block">
        <ul id="chat-tabs"></ul>
      </div>
    </div>
  </div>
</div>
