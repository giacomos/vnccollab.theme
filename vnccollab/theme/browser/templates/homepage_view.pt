<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="main">
<metal:block define-macro="main"
             tal:define="news view/getNews">
    
  <div class="portletWrapper">
    <dl class="portlet portletNews wide"
        i18n:domain="plone">

        <dt class="portletHeader">
            <span class="portletTopLeft"></span>
            <a href="news"
                   i18n:translate="vnc_news"
                   tal:attributes="href string:${context/portal_url}/${attrs/href}">VNC News</a>
            <span class="portletTopRight"></span>
        </dt>

        <tal:newsitems  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                                    plone_view context/@@plone"
                        tal:repeat="obj news">
        <dd tal:define="oddrow repeat/obj/odd"
             tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

            <a href=""
               class="tile"
               tal:attributes="href obj/getURL;
                               title obj/Description">
                <span tal:replace="obj/pretty_title_or_id">
                Plone 2.1 announced!
                </span>
            </a>
            <span class="portletItemDetails"
                  tal:content="python:toLocalizedTime(obj.Date)">May 5</span>
        
        </dd>
        </tal:newsitems>

        <dd class="portletFooter"
            tal:condition="news">
            <span class="portletBottomLeft"></span>
            <a href="news"
               tal:attributes="href string:${context/portal_url}/${attrs/href}"
               i18n:translate="box_more_news_link">
              All news &#187;
            </a>
            <span class="portletBottomRight"></span>
        </dd>
        
        <metal:empty metal:define-slot="no_items_in_listing">
        <dd class="portletItem even"
           tal:condition="not:news"
           i18n:translate="description_no_items_in_folder">
            There are currently no news here.
        </dd>
        </metal:empty>
        
    </dl>
  </div>

</metal:block>
</metal:content-core>

</body>
</html>