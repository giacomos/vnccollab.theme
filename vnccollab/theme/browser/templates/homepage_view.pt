<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
</head>

<body>

<metal:content-core fill-slot="main">
<metal:block define-macro="main">

  <div id="anon-dashboard">
    <div id="dashboard-portlets1" class="portlets-column"
         tal:define="col python:view.getColumn(name='plone.dashboard1')"
         tal:condition="col"
         tal:content="structure col" />
    <div id="dashboard-portlets2" class="portlets-column"
         tal:define="col python:view.getColumn(name='plone.dashboard2')"
         tal:condition="col"
         tal:content="structure col" />
    <div id="dashboard-portlets3" class="portlets-column"
         tal:define="col python:view.getColumn(name='plone.dashboard3')"
         tal:condition="col"
         tal:content="structure col" />
    <div id="dashboard-portlets4" class="portlets-column"
         tal:define="col python:view.getColumn(name='plone.dashboard4')"
         tal:condition="col"
         tal:content="structure col" />
  </div>

</metal:block>
</metal:content-core>

</body>
</html>
