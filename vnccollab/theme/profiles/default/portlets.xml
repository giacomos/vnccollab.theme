<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="vnccollab.theme">

 <portlet
   addview="vnccollab.theme.portlets.EtherpadsListPortlet"
   title="Etherpad Lists portlet"
   description="A portlet displaying list of Etherpad pads."
   i18n:attributes="title;description">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>

 <portlet
   addview="vnccollab.theme.portlets.ZimbraMailPortlet"
   title="Zimbra Mail portlet"
   description="A portlet which can render Zimbra Mail boxes."
   i18n:attributes="title;description">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
 
 <portlet
   addview="vnccollab.theme.portlets.ZimbraCalendarPortlet"
   title="Zimbra Calendar Portlet"
   description="A portlet which can render Zimbra Calendar."
   i18n:attributes="title;description">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
 
 <portlet
   addview="vnccollab.theme.portlets.UsersBoxPortlet"
   title="Users Box portlet"
   description="A portlet which lists users contributed to current container."
   i18n:attributes="title;description">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>

 <portlet
   addview="vnccollab.theme.portlets.OpenERPJSPortlet"
   title="OpenERP Javascript portlet"
   description="A generic portlet which can render any OpenERP widget."
   i18n:attributes="title;description">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>

 <portlet
   addview="vnccollab.theme.portlets.RedmineTicketsPortlet"
   title="Redmine Tickets portlet"
   description="Renders list of opened Redmine Tickets for authenticated user."
   i18n:attributes="title;description">
   <for interface="plone.app.portlets.interfaces.IColumn" />
   <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>

 <!-- Portlet Assignments -->
 <!-- Authenticated Users Group Dashboard -->
 <!-- EtherpadLists portlet -->
  <assignment
      manager="plone.dashboard1"
      category="group"
      key="AuthenticatedUsers"
      type="vnccollab.theme.portlets.EtherpadsListPortlet"
      name="etherpad-lists">
    <property name="header">Your Pads</property>
  </assignment>
 <!-- Redmine Tickets portlet -->
  <assignment
      manager="plone.dashboard1"
      category="group"
      key="AuthenticatedUsers"
      type="vnccollab.theme.portlets.RedmineTicketsPortlet"
      name="redmine-tickets">
    <property name="username"></property>
    <property name="password"></property>
  </assignment>
 
</portlets>
